<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeActivity">
    <com.example.videoapp.view.FixedViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5dp"
        android:alpha="0.6"
        android:background="@color/divider"
        />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_66dp"
        android:background="@color/colorVideoBgColor"
        tl:tl_iconHeight="@dimen/dimen_32dp"
        tl:tl_iconWidth="@dimen/dimen_32dp"
        tl:tl_indicator_color="#2C97DE"
        tl:tl_indicator_height="@dimen/dimen_0dp"
        tl:tl_textSelectColor="#2C97DE"
        app:tl_textUnselectColor="@color/colorFontDefault"
        tl:tl_textsize="@dimen/dimen_14sp"
        tl:tl_underline_color="@color/colorVideoBgColor"
        tl:tl_underline_height="@dimen/dimen_1dp"/>
</LinearLayout>