<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_12dp"
    android:background="@color/colorVideoBgColor"
    >
    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="标题标题标题标题"
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/colorFontDefault"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/news_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_12dp"
        android:src="@mipmap/img3"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/news_title"
        app:layout_constraintDimensionRatio="16:9"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_24dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_12dp"
        app:layout_constraintTop_toBottomOf="@id/news_cover"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            app:cardCornerRadius="@dimen/dimen_24dp"
            >
            <ImageView
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:src="@mipmap/img_head"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/news_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:text="游戏早知道"
            android:textColor="@color/colorVideoSubTitle"
            />
        <TextView
            android:id="@+id/news_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:text="1评论"
            android:textColor="@color/colorVideoSubTitle"
            />
        <TextView
            android:id="@+id/news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:text="1小时前"
            android:textColor="@color/colorVideoSubTitle"
            />
    </LinearLayout>
        
    
</androidx.constraintlayout.widget.ConstraintLayout>