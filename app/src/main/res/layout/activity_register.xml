<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_330dp"
        android:src="@mipmap/img_login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dimen_280dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_230dp"
            android:background="@drawable/shape_register_form"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="@dimen/dimen_18dp"
            android:layout_marginEnd="@dimen/dimen_18dp"
            android:paddingStart="@dimen/dimen_30dp"
            android:paddingEnd="@dimen/dimen_30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:src="@drawable/ic_account"/>
                <EditText
                    android:id="@+id/et_account_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/account_hint"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:textColorHint="#bcbcbc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:layout_marginTop="@dimen/dimen_23dp"
                android:layout_marginBottom="@dimen/dimen_23dp"
                android:background="#e8e7e7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:src="@drawable/ic_key"/>
                <EditText
                    android:id="@+id/et_pwd_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/pw_hint"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:textColorHint="#bcbcbc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18sp"
                    android:background="@null"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55dp"
            android:text="@string/register"
            android:textSize="@dimen/dimen_24sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_big_register_btn"
            android:layout_marginTop="@dimen/dimen_68dp"
            android:layout_marginStart="@dimen/dimen_18dp"
            android:layout_marginEnd="@dimen/dimen_18dp"/>
    </LinearLayout>

</RelativeLayout>